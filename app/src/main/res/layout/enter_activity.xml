<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <EditText
        android:id="@+id/StopNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Stop Number"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="38dp" />

    <EditText
        android:id="@+id/StopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Stop Name"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="103dp" />

    <EditText
        android:id="@+id/StopKeywords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Keywords"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="162dp" />

    <Button
        android:id="@+id/busStopBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save bus stop"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="231dp" />

    <EditText
        android:id="@+id/RouteNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Route Number"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="421dp" />

    <EditText
        android:id="@+id/RouteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Route Name"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="346dp" />

    <Button
        android:id="@+id/busRouteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save bus route"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="490dp" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>